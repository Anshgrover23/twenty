{
  "name": "twenty-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/twenty-sdk/src/sdk",
  "projectType": "library",
  "tags": [
    "scope:sdk"
  ],
  "targets": {
    "build": {
      "dependsOn": [
        "generateBarrels",
        "buildCli",
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/application/package.json",
        "{projectRoot}/application/dist"
      ]
    },
    "beforeBuildCli": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "packages/twenty-sdk",
        "commands": [
          "rimraf dist",
          "tsc --project tsconfig.cli.json"
        ]
      },
      "dependsOn": [
        "^build"
      ]
    },
    "buildCli": {
      "executor": "nx:run-commands",
      "cache": true,
      "options": {
        "cwd": "packages/twenty-sdk",
        "commands": [
          "cp -R src/cli/constants/base-application-project dist/constants"
        ]
      },
      "dependsOn": [
        "beforeBuildCli"
      ]
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "cwd": "packages/twenty-sdk",
        "command": "node dist/cli.js"
      }
    },
    "generateBarrels": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "production",
        "{projectRoot}/scripts/generateBarrels.ts"
      ],
      "outputs": [
        "{projectRoot}/src/sdk/index.ts",
        "{projectRoot}/src/sdk/*/index.ts",
        "{projectRoot}/package.json"
      ],
      "options": {
        "command": "tsx {projectRoot}/scripts/generateBarrels.ts"
      }
    },
    "lint": {
      "configurations": {
        "fix": {}
      }
    }
  }
}
